{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>juliushenke/renovate-preset"
  ],
  "baseBranchPatterns": [
    "master"
  ],
  "assignees": [
    "JuliusHenke"
  ],
  "packageRules": [
    {
      "matchPackageNames": "preact-cli",
      "allowedVersions": "<=3.0.5"
    },
    {
      "matchPackageNames": [
        "@material/radio",
        "@material/switch"
      ],
      "allowedVersions": "<5.0.0"
    },
    {
      "matchPackageNames": [
        "@types/node",
        "node"
      ],
      "allowedVersions": "^18"
    },
    {
      "matchPackageNames": [
        "husky"
      ],
      "allowedVersions": "<8.0.0"
    },
    {
      "matchPackageNames": [
        "lint-staged"
      ],
      "allowedVersions": "<13.0.0"
    },
    {
      "matchPackageNames": [
        "css-loader",
        "sass-loader"
      ],
      "enabled": false
    },
    {
      "groupName": "frontend-minor",
      "extends": [
        "github>juliushenke/renovate-preset:minor.json"
      ],
      "matchPackageNames": [
        "!/^(typescript|preact)$/"
      ],
      "matchFileNames": [
        "**/frontend/**"
      ]
    }
  ]
}
