{
    "private": true,
    "name": "kalkulierbar",
    "version": "0.0.0",
    "license": "GPL-3.0-only",
    "scripts": {
        "start": "per-env",
        "start:production": "npm run -s serve",
        "start:development": "npm run -s dev",
        "build": "preact build --prerender=false",
        "format": "tslint --config tslintAutoFix.json --fix --project . && prettier src/\\{components,routes,style,types,util\\}/**/* --write",
        "serve": "preact build --prerender=false && serve build/ -s -l ${PORT:-8080}",
        "serve-only": "serve build/ -s -l ${PORT:-8080}",
        "dev": "preact watch",
        "lint": "tslint --project .",
        "test": ""
    },
    "lint-staged": {
        "*.{js,jsx,css,md,scss}": [
            "prettier --write"
        ],
        "*.{ts,tsx}": [
            "tslint --fix"
        ]
    },
    "eslintConfig": {
        "extends": "eslint-config-aerian"
    },
    "eslintIgnore": [
        "build/*"
    ],
    "devDependencies": {
        "@types/webpack-env": "1.16.3",
        "css-loader": "1.0.1",
        "husky": "4.3.8",
        "identity-obj-proxy": "3.0.0",
        "lint-staged": "12.1.7",
        "node-sass": "5.0.0",
        "per-env": "1.0.2",
        "preact-cli": "3.0.3",
        "prettier": "2.0.2",
        "sass-loader": "10.0.5",
        "ts-loader": "8.0.11",
        "tslint": "6.1.3",
        "tslint-config-prettier": "1.18.0",
        "tslint-consistent-codestyle": "1.16.0",
        "tslint-eslint-rules": "5.4.0",
        "tslint-react": "3.6.0",
        "typescript": "3.9.10",
        "typings-for-css-modules-loader": "1.7.0"
    },
    "dependencies": {
        "@material/radio": "4.0.0",
        "@material/switch": "4.0.0",
        "@yarnpkg/pnpify": "2.4.0",
        "firebase-tools": "10.0.1",
        "preact": "10.3.4",
        "preact-markup": "2.1.1",
        "preact-render-to-string": "5.1.19",
        "preact-router": "4.0.0",
        "react-hint": "3.2.1",
        "serve": "13.0.2",
        "sha3": "2.1.4",
        "tslint-etc": "1.13.10"
    },
    "peerDependencies": {
        "prettier": ">1.0.0",
        "tslint": ">5.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "lint-staged"
        }
    },
    "packageManager": "yarn@3.1.1"
}
