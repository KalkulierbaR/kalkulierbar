{
    "name": "kalkulierbar",
    "version": "0.0.0",
    "license": "GPL-3.0-only",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "per-env",
        "start:production": "npm run -s serve",
        "start:development": "npm run -s dev",
        "build": "tsc && vite build",
        "format": "prettier src/\\{components,routes,style,types,util\\}/**/* --write",
        "serve": "tsc && vite build && serve build/ -s -l ${PORT:-3000}",
        "serve-only": "serve build/ -s -l ${PORT:-3000}",
        "dev": "vite",
        "lint": "eslint .",
        "lint-staged": "lint-staged",
        "test": "",
        "postinstall": "cd .. && husky install frontend/.husky"
    },
    "lint-staged": {
        "*.{js,jsx,css,md,scss}": [
            "prettier --write"
        ],
        "*.{ts,tsx}": [
            "eslint src/**/*.{ts,tsx,js,jsx} --fix"
        ]
    },
    "engines": {
        "node": "^18"
    },
    "dependencies": {
        "@material/radio": "4.0.0",
        "@material/switch": "4.0.0",
        "firebase-tools": "13.29.2",
        "preact": "10.19.3",
        "preact-iso": "2.8.1",
        "preact-markup": "2.1.1",
        "preact-render-to-string": "6.5.13",
        "react-hint": "3.2.1",
        "serve": "14.2.4",
        "sha3": "2.1.4"
    },
    "devDependencies": {
        "@preact/preset-vite": "2.10.0",
        "@types/eslint": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "8.21.0",
        "@typescript-eslint/parser": "8.21.0",
        "eslint": "9.18.0",
        "husky": "8.0.3",
        "lint-staged": "13.2.2",
        "per-env": "1.0.2",
        "prettier": "3.4.2",
        "sass": "1.83.4",
        "typescript": "5.3.3",
        "vite": "6.0.11",
        "vite-plugin-sass-dts": "1.3.30"
    },
    "peerDependencies": {
        "prettier": ">2.0.0"
    },
    "packageManager": "yarn@4.6.0"
}
